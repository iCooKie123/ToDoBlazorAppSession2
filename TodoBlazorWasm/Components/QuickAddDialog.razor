

@if (ShowModal)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">@Title</h5>
                    <button type="button" class="close" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@TodoItem" OnValidSubmit="@OnOkClicked">
                        <div class="form-group">
                            <label for="titleInput">Title:</label>
                            <InputText id="titleInput" class="form-control" @bind-Value="@TodoItem.Title" />
                        </div>
                        <p>@Content</p>
                        <button type="submit" class="btn btn-outline-primary">OK</button>
                        <button type="button" class="btn btn-outline-primary" @onclick="@OnCancelClicked">Cancel</button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}